<div class="col-md-6 col-md-offset-3" >
  <div style='padding:1.5rem;box-shadow:0 1px 2px #aaa;background:white; margin:0 1rem 1rem; border-radius:3px;'>
    <h1 style="text-align: center;">User Info</h1>
    <div class="col-md-8">
      <!--Users picture-->
      <%= image_tag @user.profile_picture_url, style: 'width:100%; height: 100%;' if @user.profile_picture? %>
    </div>
    <!--User info-->
    <div class="col-md-4">
      <p>Name: <%= @user.first_name if @user.first_name? %> <%= " " + @user.last_name if @user.last_name? %></p>
      <p>Email: <%= @user.email ? @user.email : ''%></p>
      <p>Phone Number: <%= @user.phone_number if @user.phone_number?%></p>
      <p>Major: <%= (@user.major && @user.major.name) ? @user.major.name : '' %></p>
      <p>College: <%= (@user.college && @user.college.name) ? @user.college.name : '' %></p>
    </div>
    <!--makes sure everything stays on the page-->
    <div class="clear"> </div>
    <% if current_user && current_user.id == @user.id %>
        <div style="float: right;">
          <%= link_to "Back to Users", users_path(@user) %> |
          <%= link_to "Edit Info", edit_user_path(@user) %>
        </div>
    <% end %>
    <br>
  </div>
</div>