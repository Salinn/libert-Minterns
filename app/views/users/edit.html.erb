<div class="col-md-6 col-md-offset-3" >
  <div style='padding:1.5rem;box-shadow:0 1px 2px #aaa;background:white; margin:0 1rem 1rem; border-radius:3px;'>
    <h1 style="text-align: center;">Your Info</h1>
    <!--Users picture-->
    <div class="col-md-8">
      <!--Users picture-->
      <%= image_tag @user.profile_picture_url, style: 'width:100%; height: 100%;' if @user.profile_picture? %>
      <%= form_for current_user, url: {action: "update"} do |f| %>
          <div class="field">
            <%= f.file_field :profile_picture %>
          </div>
          <div class="field">
            <%= f.label :remote_profile_picture_url, "or image URL" %><br />
            <%= f.text_field :remote_profile_picture_url %>
          </div>
          <%= f.submit "Update Picture" %>
      <% end %>
      <div class="field">
      </div>
    </div>
    <!--makes sure everything stays on the page-->
    <div class="col-md-4">
      <%= form_for @user, url: {action: "update"} do |f| %>
          <%= f.text_field :first_name, :placeholder => "First Name" %>
          <%= f.text_field :last_name, :placeholder => "Last Name" %>
          <%= f.text_field :phone_number, :placeholder => "Phone Number" %>
          <div class="clear"> </div>
          <%= f.submit "Update Information" %>
      <% end %>
    </div>
    <div class="clear"></div>
    <div style="font-size: 1.7rem; float: right">
      <%= link_to "Back to Account Page", user_path %>
    </div>
    <div class="clear"></div>
  </div>
</div>