<p id="notice"><%= notice %></p>

<h1>Listing Photos</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Comment</th>
      <th>Gallery</th>
      <th>Photo challenge</th>
      <th>Winning photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag(photo.picture_url) %></td>
        <td><%= photo.comment %></td>
        <td><%= photo.gallery %></td>
        <td><%= photo.photo_challenge %></td>
        <td><%= photo.winning_photo %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

