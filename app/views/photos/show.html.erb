<div align='center' class='col-md-8 col-md-offset-2'>
  <%= image_tag(@photo.picture_url, style: 'width:100%; max-width:500px; height: 100%; max-height: 500px;' ) %>
<% if @photo.comment.size > 0 %>
<p>
  <strong>Comment:</strong>
  <%= @photo.comment %>
</p>
<% end %>
<% if @photo.gallery && @photo.gallery.name %>
<p>
  <strong>Gallery:</strong>
  <%= @photo.gallery.name %>
</p>
<% end %>
<% if @photo.photo_challenge && @photo.photo_challenge.title %>
<p>
  <strong>Photo challenge:</strong>
  <%= @photo.photo_challenge.theme %>
</p>
<% end %>
<%= link_to 'Edit', edit_photo_path(@photo) %> |
<%= link_to 'Back', photos_path %>
</div>