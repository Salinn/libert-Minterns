<!-- should move style into a class -->
<div id='master-div'>
  <div class="sections class='col-md-8 col-md-offset-2'" id='Summaries' style='display: none'>
    <%= render 'intern_summaries/show_intern_summaries' %>
  </div>

  <h1 style='text-align: center;'>FAQ Section</h1>

  <div>
    <ul class="nav nav-tabs faq-cat-tabs">
      <li class="active">
        <a href="#faq-cat-<%= @faq_sections.first.id %>" data-toggle="tab"><%= @faq_sections.first.name %></a>
      </li>
      <% @faq_sections.each do |faq_section| %>
          <% next if faq_section.id == 1 %>
          <li>
            <a href="#faq-cat-<%= faq_section.id %>" data-toggle="tab"><%= faq_section.name %></a>
          </li>
      <% end %>
    </ul>
  </div>

  <div class="tab-content faq-cat-content">
    <% @faq_sections.each_with_index do |faq_section, index| %>
        <div class="tab-pane<% if index == 0 %> active in fade<% end %>" id="faq-cat-<%= faq_section.id %>">
          <div class="panel-group" id="accordion-cat-<%= faq_section.id %>">
            <% faq_section.faqs.each do |faq| %>
                <div class="panel panel-default panel-faq">
                  <div class="panel-heading">
                    <a data-toggle="collapse" data-parent="#accordion-cat-<%= faq_section.id %>" href="#faq-cat-<%= faq_section.id %>-sub-<%= faq.id %>">
                      <h4 class="panel-title">
                        <%= faq.questions.first.title %>
                        <span class="pull-right"><i class="glyphicon glyphicon-plus"></i></span>
                      </h4>
                    </a>
                  </div>
                  <div id="faq-cat-<%= faq_section.id %>-sub-<%= faq.id %>" class="panel-collapse collapse">
                    <%= render 'questions/faq_question', faq: faq %>
                    <% faq.questions.first.answers.each do |answer| %>
                        <%= render 'answers/faq_answer',answer: answer, faq: faq %>
                    <% end %>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
<script>
    $(document).ready(function() {
        $('.collapse').on('show.bs.collapse', function() {
            var id = $(this).attr('id');
            $('a[href="#' + id + '"]').closest('.panel-heading').addClass('active-faq');
            $('a[href="#' + id + '"] .panel-title span').html('<i class="glyphicon glyphicon-minus"></i>');
        });
        $('.collapse').on('hide.bs.collapse', function() {
            var id = $(this).attr('id');
            $('a[href="#' + id + '"]').closest('.panel-heading').removeClass('active-faq');
            $('a[href="#' + id + '"] .panel-title span').html('<i class="glyphicon glyphicon-plus"></i>');
        });
    });
</script>