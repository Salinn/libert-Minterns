<!-- should move style into a class -->
<div id='master-div'>
  <div class="sections class='col-md-8 col-md-offset-2'" id='Summaries' style='display: none'>
    <%= render 'intern_summaries/show_intern_summaries' %>
  </div>


  <h1 style='text-align: center;'>FAQ Section</h1>
  <% @faq_sections.each_with_index do |faq_section, index| %>
      <h2 style='text-align: center;'><%= faq_section.name %></h2>
      <% faq_section.faqs.each do |faq| %>
          <div style="background-color: lightblue; width: 100%; margin: 0 auto; min-height: 80px;">
            <div style="width: 20px; float: left;">
              <%= link_to '', faq_upvote_path(faq), method: :post, class: "glyphicon glyphicon-arrow-up" %>
              <h5><%= faq.ratings.first.total %></h5>
              <%= link_to '', faq_downvote_path(faq), method: :post, class: "glyphicon glyphicon-arrow-down"  %>
            </div>

            <div style="display: inline-block; width: 70%;">
              <h5 style="vertical-align: middle;"><%= faq.questions.first.title %></h5>
              <p style="vertical-align: middle;"><%= faq.questions.first.content %></p>
            </div>
          </div>

          <% faq.questions.first.answers.each do |answer| %>
              <div style="background-color: lightgray; width: 100%; margin: 0 auto; min-height: 80px;">
                <div style="width: 20px; float: left; margin-left: 2%;">
                  <%= link_to '', faq_upvote_path(answer), method: :post, class: "glyphicon glyphicon-arrow-up" %>
                  <h5><%= answer.rating.total %></h5>
                  <%= link_to '', faq_downvote_path(answer), method: :post, class: "glyphicon glyphicon-arrow-down" %>
                </div>

                <div style="display: inline-block; width: 70%; padding-top: 10px; ">
                  <p style="vertical-align: middle;"><%= answer.content %></p>
                  <p style="vertical-align: middle;"><Written by: <%= answer.user.first_name %> <%= answer.user.last_name %></p>
                </div>
              </div>
          <% end %>

          <hr>
      <% end %>
  <% end %>
</div>